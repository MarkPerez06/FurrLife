@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewBag.Title = "Register User";
    ViewBag.pTitle = "Register User";
    ViewBag.pageTitle = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // var Person = new
    // {
    //     IsAdmin = false,
    //     IsStaff = true,
    //     IsMember = false
    // };
    // ViewBag.Persons = Person;

}
<br />
<br />
<br />
<div class="pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-primary1 bg-soft">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-black p-4">
                                    <h5 class="text-black">Register Account</h5>
                                    <p>Register an account to FurrLife.</p>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div>
                            <a href=#>
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="~/assets/images/dog.png" alt="" class="rounded-circle" height="80">
                                    </span>
                                </div>
                            </a>
                        </div>
                        <div class="p-2">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="mb-3">
                                    <label asp-for="Input.Email">Username</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" type="text" placeholder="Username" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" type="password" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" type="password"  placeholder="Confirm password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-check">
                                    <div class="checkbox">
                                        <label class="form-label">
                                            <input id="terms" class="form-check-input" type="checkbox" name="terms" />
                                            <label for="terms">By registering you agree to the FurrLife <a href="#" class="text-primary">Terms of Use</a></label>
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-1 d-grid">
                                    <button id="registerSubmit" type="submit"  class="btn btn-primary waves-effect waves-light">Sign Up</button>
                                </div>
                                <div class="mt-3 d-grid mb-2">
                                    <a href="./Login" class="btn btn-secondary1 waves-effect waves-light">Back</a>
                                </div>

                           @*      <div class="mt-4 text-center">
                                    <div class="mt-2 text-center">
                                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted"><i class="mdi mdi-account-box me-1"></i> Login an account</a>
                                    </div>
                                </div>

                                <div class="mt-4 text-center">
                                    <p class="mb-0">By registering you agree to the FurrLife <a href="#" class="text-primary">Terms of Use</a></p>
                                </div> *@
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- validation init -->
<script src="~/assets/js/pages/validation.init.js"></script>

<!-- App js -->
<script src="~/assets/js/app.js"></script>

